<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaxPayerSortReceipt">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btnSortByPurpose"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_above="@+id/recyclerView"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"
        android:text="Sort By Purpose" />

    <Button
        android:id="@+id/btnSortByPlace"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_above="@+id/recyclerView"
        android:layout_margin="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@+id/btnSortByPurpose"
        android:text="Sort By Place" />

    <EditText
        android:id="@+id/editTextPurposeSearch"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Purpose"
        android:layout_margin="2sp"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/ibtnPurposeSearch"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_toRightOf="@+id/editTextPurposeSearch"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/editTextPlaceSearch"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Place"
        android:layout_margin="3sp"
        android:layout_toRightOf="@+id/ibtnPurposeSearch"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/ibtnPlaceSearch"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_toRightOf="@+id/editTextPlaceSearch"
        app:srcCompat="@android:drawable/ic_menu_search" />


</RelativeLayout>